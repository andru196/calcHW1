<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_settings_24"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/main_history"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toStartOf="@+id/main_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_history_24" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_clear"
                    android:layout_weight="1"
                    android:text="C" />

                <ImageView
                    android:padding="20dp"
                    android:id="@+id/main_backspace"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_backspace_24"
                    android:background="@drawable/shape_main_button"
                    />
                <TextView
                    style="@style/MainButton"
                    android:layout_weight="1"
                    android:text="M"
                    />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_multy"
                    android:layout_weight="1"
                    android:text="*"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_one"
                    android:layout_weight="1"
                    android:text="1" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_two"
                    android:layout_weight="1"
                    android:text="2" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_three"
                    android:layout_weight="1"
                    android:text="3" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_dev"
                    android:layout_weight="1"
                    android:text="/"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_four"
                    android:layout_weight="1"
                    android:text="4" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_five"
                    android:layout_weight="1"
                    android:text="5" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_six"
                    android:layout_weight="1"
                    android:text="6" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_minus"
                    android:layout_weight="1"
                    android:text="-"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_seven"
                    android:layout_weight="1"
                    android:text="7" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_eight"
                    android:layout_weight="1"
                    android:text="8" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_nine"
                    android:layout_weight="1"
                    android:text="9" />
                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_plus"
                    android:layout_weight="1"
                    android:text="+"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_point"
                    android:layout_weight="1"
                    android:text="." />

                <TextView
                    style="@style/MainButton"
                    android:layout_weight="1"
                    android:id="@+id/main_zero"
                    android:text="0" />

                <TextView
                    style="@style/MainButton"
                    android:id="@+id/main_equal"
                    android:layout_weight="2"

                    android:text="=" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/input_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/result_tv"
        tools:text="123"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/button_container" />




</androidx.constraintlayout.widget.ConstraintLayout>